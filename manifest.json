{
  "name": "u360gts - configurator",
  "version": "1.0",
  "author": "Raul Ortega",
  "manifest_version": 2,
  "minimum_chrome_version": "23",
  "short_name": "u360gts",
  "description": "u360gts antenna tracker configurator",
 
  "app": {
    "background": {
      "scripts": [ "background.js" ]
    }
  },

  "icons": {
    "16": "assets/u360gts_icon_16.png",
    "128": "assets/u360gts_icon_128.png"
  },

  "permissions": [
	"http://www.u360gts.com/*",
	"https://maps.googleapis.com/*",
	"https://*.github.com/",
	"serial",
	"usb",
	"storage",
	"fileSystem",
	"fileSystem.write",
	"fileSystem.retainEntries",
	"notifications",
	"alwaysOnTopWindows"
  ]
}
